---
import servicesData from "../../data/services.json";
---

<div class="w-full h-full md:px-3 ">
    <div class="heading text-center">
        <h2 class="section-heading">We can <span>help</span> you <br class="hidden lg:block"/> <span>with</span/> that</h2>
        <p class="mt-3 md:mt-5 lg:mt-7 xl:mt-9 px-[14%]">Based on your specific requirements, we tailor <br class="hidden sm:block"/> our services and products.</p>
    </div>

    <div class="!max-w-[1000px] mx-auto rounded-xl overflow-hidden my-8 border-2 border-white shadow-xl">
        <div class="flex items-end md:px-8 w-full justify-center flex-wrap lg:flex-nowrap">
            <button id="brand" class="tab_button">
                <div class="box pb-1">
                    <img src="/image/icon-design.png" class="object-contain mx-auto" alt="">
                </div>
                <p>
                    Branding
                </p>
            </button>
            <button id="graphics" class="tab_button active">
                <div class="box pb-1">
                    <img src="/image/icon-design.png" class="object-contain mx-auto" alt="">
                </div>
                <p>Custom Graphics</p>
            </button>
            <button id="social" class="tab_button">
                <div class="box pb-1">
                    <img src="/image/icon-design.png" class="object-contain mx-auto" alt="">
                </div>
                <p>Social Banner</p>
            </button>
            <button id="uiux" class="tab_button">
                <div class="box pb-1">
                    <img src="/image/icon-design.png" class="object-contain mx-auto" alt="">
                </div>
                <p>Web Design</p>
            </button>
            <button id="wdev" class="tab_button">
                <div class="box pb-1">
                    <img src="/image/icon-design.png" class="object-contain mx-auto" alt="">
                </div>
                <p>Web Development</p>
            </button>
        </div>
        <div class="flex flex-col lg:flex-row items-center lg:px-8 py-[4.5rem]">
            <div class="w-full">
                <ul>
                    {servicesData.map(({contents})=>contents.map(({title, text})=> <li class="mx-2 mb-6 last:mb-6 select-none">
                        <div class="flex items-center gap-2 md:gap-4 mb-3">
                            <img src="/icons/check.svg" />
                            <h5 class="cursor-pointer selected-text">{title}</h5>
                        </div>
                        <p class="w-full lg:max-w-[378px] pl-[2.625rem] text-secondary">{text}</p>
                    </li>))}
                </ul>
            </div>
            <div class="w-full flex justify-center items-center min-h-full">
                <img class="" src="/image/serve-2.png" alt="">
            </div>
        </div>

    </div>
</div>

<style>
    .tab_button {
        padding-top: 1.2rem;
        font-size: 1rem;
        font-weight: 600;
        color: var(--secondary);
        border-bottom: 2px solid white;
        height: 100%;
        text-wrap: nowrap;
        width: 100%;
        box-shadow: none;
        border-radius: 0px;
    }

    .tab_button .box {
        visibility: hidden;
    }

    .tab_button.active {
        border-bottom: 2px solid var(--primary);
        background-color: white;
    }

    .tab_button.active .box {
        visibility: visible;
    }

    /* h4 {
        font-size: 1.65rem;
        font-weight: 600;
        color: var(--secondary)
    } */
</style>

<script>
   const buttons = document.querySelectorAll("button");
   buttons.forEach((btn)=> {
    btn.addEventListener("click", ()=>{
    buttons.forEach(button => button.classList.remove("active"))
    btn.classList.add("active")
    })
   })


</script>